<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jason.product.dao.ProductDao">
    <resultMap id="productPo" type="com.jason.product.po.ProductPO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category" property="categoryId"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="enabled" property="enabled"/>
    </resultMap>

    <resultMap id="productSimple" type="com.jason.product.dto.ProductSimpleDTO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category_name" property="category"/>
        <result column="enabled" property="enabled"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <resultMap id="productDetail" type="com.jason.product.dto.ProductDetailDTO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="category_name" property="category"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="create_time" property="createTime"/>
        <result column="enabled" property="enabled"/>
    </resultMap>

    <resultMap id="productProperties" extends="productSimple" type="com.jason.product.dto.ProductPropertyDTO">
        <association property="properties" column="id" select="com.jason.product.dao.ProductDao.getDetail"/>
    </resultMap>

    <sql id="product">
        table_product
    </sql>
    <sql id="simple">
        p.id as id, p.name as name, p.create_time as createTime, p.enabled as enabled
    </sql>

    <sql id="category">
        pc.category_name as categoryName
    </sql>
    <sql id="detail">
        pd.title as title, pd.content as content
    </sql>

    <select id="getById" parameterType="java.lang.Integer" resultMap="productPo">
        select * from
        <include refid="product"/>
        where id=#{id}
    </select>

    <select id="getDetail" parameterType="java.lang.Integer" resultMap="productDetail">
        select p.*, pd.*, pc.*
        from table_product p, table_product_detail pd, table_product_category pc
        where p.id=#{id} and pd.product_id = p.id and pc.id=p.id
    </select>

    <select id="getProperty" parameterType="java.lang.Integer" resultMap="productProperties">

    </select>


</mapper>
